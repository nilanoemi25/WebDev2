
{{#each station}}
<div class="columns is-variable has-text-white  has-background-black">
  <div class="column"> {{>icons/pin}} <br>
    Lat: N/A <br>
    Long: N/A
  </div>
  <div class="column is-1 has-background-white"></div>
  <div class="column"> Weather <br> Placeholder Icon {{>icons/thunderstorm}} </div>
  <div class="column is-1 has-background-white"></div>
  <div class="column"> Temp <br> {{>icons/temp}} <br> 
    Min: {{currentReport.temperature}} <br>
    </div>
  <div class="column is-1 has-background-white"></div>
  <div class="column"> 
    Wind <br>  {{>icons/wind}} <br>
  Min: {{currentReport.windspeed}} <br> 
  </div>
  <div class="column is-1 has-background-white"></div>
  <div class="column"> 
    Pressure <br> {{>icons/pressure}} <br> 
    Min: {{viewData.pressure}} 
 </div>

</div>
<div class="box box-link-hover-shadow">
  <h2 class="title">
    {{title}}
  </h2>
  <div class="has-text-left">
  <a href="/station/{{_id}}" class="button">
  {{>icons/open}}
  </a>
  <a href="/dashboard/deletestation/{{_id}}" class="button">
  {{>icons/delete}}
  </a>
  </div>
</div>
{{/each}}