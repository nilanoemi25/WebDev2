<table class="table is-fullwidth">
  <thead>
    <tr>
      <th> Date </th>
      <th>Code</th>
      <th> Temp</th>
      <th>WindSpeed</th>
      <th>Pressure</th>
      <th>WindDirection</th>
    </tr>
  </thead> 
  <tbody>
    {{#each station.reports}}
    <tr>
      <td> {{date}} </td>
      <td>
        {{code}}
      </td>
      <td>
        {{temperature}}
      </td>
      <td>
        {{windspeed}}
      </td>
      <td>
        {{pressure}}
      </td>
      <td>
        {{winddirection}}
      </td>
      <td>
         <a href="/station/{{../station._id}}/deletereport/{{_id}}" class="button">
          {{>icons/delete}}
        </a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>