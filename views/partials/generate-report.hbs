<form class="box has-text-centered" action="/station/{{station._id}}/generate" method="POST">
      <h2 class="subtitle">Enter location for reading</h2>
    
      <div class="field is-horizontal">
        <div class="field-body">
          <div class="field">
            <label> Latitude </label>
            <input class="input" type="text" placeholder="52.160858" name="lat"> 
          </div>
          <div class="field">
            <label> Longitude </label>
            <input class="input" type="text" placeholder="-7.152420" name="lng"> 
          </div>
        </div>
      </div>
      <button class="button is-primary"> Generate Report from API </button>
</form>

    